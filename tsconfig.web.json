{
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "src/renderer/src/env.d.ts",
        "src/renderer/src/**/*",
        "src/renderer/src/**/*.tsx",
        "src/preload/*.d.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "baseUrl": ".",
        "paths": {
            "@renderer/*": [
                "src/renderer/src/*"
            ],
            "src/*": [
                "src/renderer/src/*"
            ],
            "assets/*": [
                "src/renderer/src/assets/*"
            ],
            "icons/*": [
                "src/renderer/src/assets/icons/*"
            ],
            "modules/*": [
                "src/renderer/src/modules/*"
            ]
        }
    }
}
